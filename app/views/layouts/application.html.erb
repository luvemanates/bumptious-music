<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <title><%= yield :artist %> :: <%= yield :album %></title>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <%= yield :meta %>

    <%= stylesheet_link_tag 'fonts', 'all-pages' %>
    <!-- <%= stylesheet_link_tag 'sifr' %> -->
    <script type="text/javascript">
        var detect = navigator.userAgent.toLowerCase();
        if (checkIt('safari')){
            if(! checkIt('chrome')) {
              document.write('<link rel="stylesheet" media="screen and min-device-pixel-ratio: 0" href="/stylesheets/safari3.css"/>');
            }
        }
        function checkIt(string){
            var place = detect.indexOf(string) + 1;
            return place;
        }
    </script>
    <%= yield :css %>

    <link rel="SHORTCUT ICON" HREF="/images/favicon.ico"> 


    <%= javascript_include_tag "jquery-1.4.4.min.js", "jquery.animate-colors-min.js", 'jquery.corners.min.js', 'jquery.utils.js' %>
    <!-- #, 'sifr.js', 'sifr-config.js'  -->



    <% if Rails.env == 'production' %>
      <script type="text/javascript">

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-21518750-1']);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

      </script>
    <% end %>

    <%= yield :js %>

  </head>
  <body>
    <div id="container">
      <%= yield %>
    </div>
  </body>
</html>
